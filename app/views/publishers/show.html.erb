<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @publisher.title %>
</p>

<p>
  <strong>City:</strong>
  <%= @publisher.city %>
</p>

<p>
  <strong>State:</strong>
  <%= @publisher.state %>
</p>

<%= link_to 'Edit', edit_publisher_path(@publisher) %> |
<%= link_to 'Back', publishers_path %>

<h1 class:"show"> List of books for the author </h1>

<p class="publisher">
  <% @publisher.books.each do |book| %>
    <h3>Title: </h3><%= book.title %>
    <h3>Price</h3>
    <%= book.price %>
    <h3>Publisher</h3>
    <%= book.publisher %>
    <h3>Category</h3>
    <%= book.category %>
    <h3>--------------------</h3>
  <% end %>
</p>