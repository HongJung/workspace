    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :publish_date %><br>
    <%= f.date_select :publish_date %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :isbn %><br>
    <%= f.text_field :isbn %>
  </div>
  <div class="field">
    <%= f.label :publisher_id %><br>
    <%= f.collection_select :publisher_id, Publisher.all, :id, :title, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :decription %><br>
    <%= f.text_area :decription %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
